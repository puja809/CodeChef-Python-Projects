while True:
    print("""Welcome to calculator
    
    Choose One Operation:
    1.Addition
    2.Substraction
    3.Exit
    """)
    n=int(input())
    if n==3:
        break
    elif n==1:
        num1=input('Enter number 1:')
        num2=input('Enter number 2:')
        print('\nSum is',int(num1)+int(num2))
    elif n==2:
        num1=input('Enter number 1:')
        num2=input('Enter number 2:')
        print('\nSum is',int(num1)-int(num2))
